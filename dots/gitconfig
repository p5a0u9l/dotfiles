	name = Paul R. Adams
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[core]
	excludesfile = /home/paul/.gitignore
[push]
  default = current
[core]
    editor = vim
	autocrlf = false
    ## Disable all whitespace checks performed by Git
    whitespace = -blank-at-eol,-space-before-tab,-blank-at-eof,cr-at-eol

    ## Configure Git to enable case-sensitivity
    ignoreCase = false

    ## Disable line ending related warnings when adding files
    safecrlf = false

[apply]
    ## Turn off whitespace warnings when applying a patch
    whitespace = nowarn

[color]
    ## Set syntax highlighting
    ui = auto


## Global difftool and mergetool settings
[difftool]
    prompt = false

[mergetool]
    prompt = false
    keepBackup = false
    trustExitCode = true

